{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/tsc-out",
    "rootDir": ".",
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "dev/*": [
        "dev/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "dev/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}