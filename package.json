{
  "name": "devtimer",
  "displayName": "DevTimer",
  "description": "Mide el tiempo de desarrollo en VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "devtimer.showReport",
        "title": "DevTimer: Mostrar reporte"
      },
      {
        "command": "devtimer.configApiKey",
        "title": "DevTimer: Configurar API Key"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devtimer-sidebar",
          "title": "DevTimer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "devtimer-sidebar": [
        {
          "type": "webview",
          "id": "devtimerReport",
          "name": "DevTimer Report",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "DevTimer",
      "properties": {
        "devtimer.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL del servidor de API"
        },
        "devtimer.apiKey": {
          "type": "string",
          "default": "",
          "description": "Clave API para autenticaci√≥n"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "open": "^8.4.2"
  }
}
