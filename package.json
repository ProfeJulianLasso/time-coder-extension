{
  "name": "devtimer",
  "displayName": "DevTimer",
  "description": "Mide el tiempo de desarrollo en VSCode",
  "publisher": "sofka",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProfeJulianLasso/time-coder-extension"
  },
  "license": "MIT",
  "icon": "resources/icon.webp",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "devtimer.showReport",
        "title": "DevTimer: Mostrar reporte"
      },
      {
        "command": "devtimer.configApiKey",
        "title": "DevTimer: Configurar API Key"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devtimer-sidebar",
          "title": "DevTimer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "devtimer-sidebar": [
        {
          "type": "webview",
          "id": "devtimerReport",
          "name": "DevTimer Report",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "DevTimer",
      "properties": {
        "devtimer.apiKey": {
          "type": "string",
          "default": "",
          "description": "Clave API para autenticaci√≥n"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "bun run compile && bun run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "clean": "rimraf out",
    "clean:react": "cd react-app && bun run clean",
    "react-install": "cd react-app && bun install",
    "react-build": "cd react-app && bun run build",
    "react-dev": "cd react-app && bun run dev",
    "build": "bun run clean && bun run compile && bun run react-build",
    "dev": "concurrently \"bun run watch\" \"bun run react-dev\"",
    "package:preview": "vsce ls",
    "package": "bun run clean && bun run compile && bun run react-build && vsce package"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "open": "^8.4.2",
    "os": "^0.1.2"
  }
}
